<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style>
	
		.important {
			font-weight: bold;
		}
	
		.headings{
			font-family: Arial;
			display:block;
			font-weight: bold;
			color: grey;
    		text-align: center;
    		font-size: 2em;
    		text-shadow: 1px 1px black;
    		text-decoration: underline;
    		margin-left: 50px;
		}
	
		.labels{
			font-weight: bold;
			font-size: 17px;
		}
		
	</ui:style>
	
	<g:HTMLPanel>
		
		<g:VerticalPanel ui:field="mainVPanel">
			<g:VerticalPanel spacing ="5">
				<g:HorizontalPanel ui:field= "appHPanel">
				<g:Label ui:field ="appLabel" text = "Patients Records" styleName="{style.headings}" />
			</g:HorizontalPanel> 
				<g:HorizontalPanel spacing ="25"> 
				
				<g:HorizontalPanel> 
		    	<g:TextBox ui:field="searchBox"></g:TextBox> 
				<g:Button ui:field="searchButton">Search</g:Button>
			</g:HorizontalPanel>
			<g:HorizontalPanel>  
				<g:Button ui:field="refreshButton" text="Refresh"></g:Button>
			</g:HorizontalPanel>
			</g:HorizontalPanel>
			</g:VerticalPanel>
			<g:VerticalPanel ui:field="cellVPanel">
				
			 
			</g:VerticalPanel>
				<g:VerticalPanel>
				
			</g:VerticalPanel>
			</g:VerticalPanel>
		
	</g:HTMLPanel>
	
</ui:UiBinder> 