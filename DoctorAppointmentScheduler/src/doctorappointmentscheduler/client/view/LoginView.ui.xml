<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
<ui:style>
	.important {
		font-weight: bold;
	}
	
	.headings{
		font-family: Arial;
		display:block;
		font-weight: bold;
		color: grey;
    	text-align: center;
    	font-size: 2em;
    	font-style: italic;
    	text-decoration: underline;
    	margin-left: 50px;
	}
	
	.labels{
		font-weight: bold;
	}
	
	.texts{
		font-weight: bold;
		color:green;
	}
	.inputBoxes{
		display:inline-block;
		
	
	}
	.button {
  display: inline-block;
  padding: 10px 20px;
  font-size: 20px;
  cursor: pointer;
  text-align: center;
  text-decoration: none;
  outline: none;
  color: #fff;
  background-color: #7ED1D9;
  border: none;
  border-radius: 10px;
  box-shadow: 0 7px #999;
}
.button:hover {background-color: #82BFC5}

.button:active {
  background-color: #77D1D9;
  box-shadow: 0 5px #666;
  transform: translateY(4px);
}


	</ui:style>
						    <!-- comments -->						
		<g:HTMLPanel >
		<g:VerticalPanel ui:field="mainVPanel" spacing="15">
			<g:VerticalPanel>
  				<g:Label  text = "Login" styleName="{style.headings}" />				
			</g:VerticalPanel>
			
			<g:VerticalPanel>
			<g:HorizontalPanel spacing = "30">
			<g:Grid>
		
				<g:row>
					<g:customCell><g:Label styleName="{style.labels}">Email:</g:Label></g:customCell>
					<g:customCell><g:TextBox ui:field="emailBox" styleName="{style.inputBoxes}"></g:TextBox></g:customCell>
				</g:row>
				<g:row>
					<g:customCell><g:Label styleName="{style.labels}">Password:</g:Label></g:customCell>
					<g:customCell><g:PasswordTextBox ui:field="passwordBox" styleName="{style.inputBoxes}"></g:PasswordTextBox></g:customCell>
				</g:row>
			</g:Grid>
			<g:HorizontalPanel ui:field = "buttonHPanel">
				<g:Button styleName="{style.button}"  ui:field="loginButton">Sign In</g:Button>
			</g:HorizontalPanel>
			
			</g:HorizontalPanel>
			
			</g:VerticalPanel>
			
			<g:VerticalPanel>
			<g:HorizontalPanel spacing = "10">
				<g:Label >Don't have an account?</g:Label>
				<g:Button ui:field="signUpButton">Sign Up</g:Button>
			</g:HorizontalPanel>
			</g:VerticalPanel>
			
		</g:VerticalPanel>

		
		
	
	</g:HTMLPanel>
</ui:UiBinder> 