<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}
	.heading{
		font-family: Arial;
		display:block;
		font-weight: bold;
		color: grey;
    	text-align: center;
    	font-size: 2em;
    	font-style: italic;
    	text-decoration: underline;
    	margin-left: 20px;
	}
	.labels{
		font-weight: bold;
	}
	.inputBoxes{
		display:inline-block;
		
	
	}
	.HPanel{
 
		width: 500px;
	}
	.button {
  display: inline-block;
  padding: 10px 20px;
  font-size: 20px;
  cursor: pointer;
  text-align: center;
  text-decoration: none;
  outline: none;
  color: #fff;
  background-color: #7ED1D9;
  border: none;
  border-radius: 10px;
  box-shadow: 0 7px #999;
}
.button:hover {background-color: #82BFC5}

.button:active {
  background-color: #77D1D9;
  box-shadow: 0 5px #666;
  transform: translateY(4px);
}
	
	</ui:style>
	<g:FormPanel>
		

		
		<g:HTMLPanel >
		<g:VerticalPanel ui:field="vPanel" spacing="5" >
			<g:Label styleName="{style.heading}">Create An Account</g:Label>
			<g:Label> </g:Label>
			<g:Grid>
				<g:row>
					<g:customCell><g:Label styleName="{style.labels}">Email:</g:Label></g:customCell>
					<g:customCell><g:TextBox ui:field="emailTextBox" styleName="{style.inputBoxes}"></g:TextBox></g:customCell>
				</g:row>
				<g:row>
					<g:customCell><g:Label styleName="{style.labels}">Password:</g:Label></g:customCell>
					<g:customCell><g:PasswordTextBox ui:field="passwordTextBox" styleName="{style.inputBoxes}"></g:PasswordTextBox></g:customCell>
				</g:row>
				<g:row>
					<g:customCell><g:Label styleName="{style.labels}">First Name:</g:Label></g:customCell>
					<g:customCell><g:TextBox ui:field="fNameTextBox" styleName="{style.inputBoxes}"></g:TextBox></g:customCell>
				</g:row>
				<g:row>
					<g:customCell><g:Label styleName="{style.labels}">Last Name:</g:Label></g:customCell>
					<g:customCell><g:TextBox ui:field="lNameTextBox" styleName="{style.inputBoxes}"></g:TextBox></g:customCell>
				</g:row>
				<g:row>
					<g:customCell><g:Label styleName="{style.labels}">Gender:</g:Label></g:customCell>
					<g:customCell><g:ListBox ui:field="genderListBox"><g:item>Male</g:item><g:item>Female</g:item></g:ListBox></g:customCell>
				</g:row>
				<g:row>
					<g:customCell><g:Label styleName="{style.labels}">Date of Birth:</g:Label></g:customCell>
					<g:customCell><g:TextBox ui:field="DOBTextBox" styleName="{style.inputBoxes}"></g:TextBox></g:customCell>
				</g:row>
				
				<g:row>
					<g:customCell><g:Label styleName="{style.labels}">Address:</g:Label></g:customCell>
					<g:customCell><g:TextBox ui:field="addressTextBox" styleName="{style.inputBoxes}"></g:TextBox></g:customCell>
				</g:row>
				<g:row>
					<g:customCell><g:Label styleName="{style.labels}">Contact Number:</g:Label></g:customCell>
					<g:customCell><g:TextBox ui:field="contactNoTextBox" styleName="{style.inputBoxes}"></g:TextBox></g:customCell>
				</g:row>
				
				
				<g:row>
					<g:customCell><g:Label styleName="{style.labels}">User Type:</g:Label></g:customCell>
					<g:customCell><g:ListBox ui:field="usertypeListBox"><g:item>Patient</g:item><g:item>Doctor</g:item><g:item>Administrative-Staff</g:item></g:ListBox></g:customCell>
				</g:row>
				<g:row>
					<g:customCell><g:Label ui:field="codeLabel" styleName="{style.labels}">Staff Code:</g:Label></g:customCell>
					<g:customCell><g:TextBox ui:field="codeTextBox" styleName="{style.inputBoxes}"></g:TextBox></g:customCell>
				</g:row>
				
			</g:Grid>
			<g:Label></g:Label>
			
			<g:HorizontalPanel ui:field = "buttonHPanel">
				<g:Button styleName="{style.button}" ui:field="createAccountButton">Create Account</g:Button>
			</g:HorizontalPanel>
			
						
		</g:VerticalPanel>
		
	</g:HTMLPanel>
	</g:FormPanel>
</ui:UiBinder> 