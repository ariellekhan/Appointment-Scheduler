<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style>
	.important {
		font-weight: bold;
	}
	.heading{
		font-weight: bold;
		text-align: center;
	}
	.labels{
		font-weight: bold;
	}
	.inputBoxes{
		display:inline-block;
		width:200px;
		margin-left:30px;
		
	
	}
	.HPanel{
 
		width: 500px;
	}
	
	</ui:style>
	<g:FormPanel>
		
		<g:HTMLPanel >
		<g:VerticalPanel ui:field="vPanel" spacing="5" >
			<g:Label styleName="{style.heading}"> Appointment Form</g:Label>
					
					<g:HorizontalPanel>
						<g:Label styleName="{style.labels}">Appointment Date: </g:Label>
						<g:Label ui:field="dateLabelText"></g:Label>
					</g:HorizontalPanel>
					<g:HorizontalPanel>
						<g:Label styleName="{style.labels}">Appointment Time:  </g:Label>
						<g:Label ui:field="timeLabelText"></g:Label>
					</g:HorizontalPanel>
					<g:HorizontalPanel>
						<g:Label styleName="{style.labels}">First Name:      </g:Label>
						<g:TextBox styleName="{style.inputBoxes}"></g:TextBox>
					</g:HorizontalPanel>
					<g:HorizontalPanel>
						<g:Label styleName="{style.labels}">Last Name: </g:Label>
						<g:TextBox styleName="{style.inputBoxes}"></g:TextBox>
					</g:HorizontalPanel>
					<g:HorizontalPanel>
						<g:Label styleName="{style.labels}">Email: </g:Label>
						<g:TextBox styleName="{style.inputBoxes}"></g:TextBox>
					</g:HorizontalPanel>
					<g:HorizontalPanel>
						<g:Label styleName="{style.labels}">Address: </g:Label>
						<g:TextBox styleName="{style.inputBoxes}"></g:TextBox>
					</g:HorizontalPanel>
					<g:HorizontalPanel>
						<g:Label styleName="{style.labels}">Contact Number: </g:Label>
						<g:TextBox styleName="{style.inputBoxes}"></g:TextBox>
					</g:HorizontalPanel>
					<g:HorizontalPanel>
						<g:Label styleName="{style.labels}">Date of Birth: </g:Label>
						<g:TextBox styleName="{style.inputBoxes}"></g:TextBox>
					</g:HorizontalPanel>
					<g:HorizontalPanel>
						<g:Label styleName="{style.labels}">Gender: </g:Label>
						<g:RadioButton ui:field="radio" name="radio">Male</g:RadioButton>
						<g:RadioButton ui:field="radio2" name="radio">Female</g:RadioButton>
					</g:HorizontalPanel>
					<g:HorizontalPanel>
						<g:Label styleName="{style.labels}">Weight: </g:Label>
						<g:TextBox styleName="{style.inputBoxes}"></g:TextBox>
					</g:HorizontalPanel>
					<g:HorizontalPanel>
						<g:Label styleName="{style.labels}">Height: </g:Label>
						<g:TextBox styleName="{style.inputBoxes}"></g:TextBox>
					</g:HorizontalPanel>
					<g:HorizontalPanel>
						<g:Label styleName="{style.labels}">Condition: </g:Label>
						<g:TextArea styleName="{style.inputBoxes}"></g:TextArea>
					</g:HorizontalPanel>
					<g:HorizontalPanel>
						<g:Label styleName="{style.labels}">Current Medication: </g:Label>
						<g:TextArea styleName="{style.inputBoxes}"></g:TextArea>
					</g:HorizontalPanel>
					<g:HorizontalPanel>
						<g:Label styleName="{style.labels}">Medical History: </g:Label>
						<g:TextArea styleName="{style.inputBoxes}"></g:TextArea>
					</g:HorizontalPanel>
					<g:HorizontalPanel>
						<g:Label styleName="{style.labels}">Upload a file of symptom (Picture/Video/Etc)</g:Label>
						<g:FileUpload></g:FileUpload>
					
					</g:HorizontalPanel>	
					<g:HorizontalPanel>
						<g:Button ui:field="backButton">Back</g:Button>
						<g:Label>            </g:Label>
						<g:Button ui:field="submitButton">Submit</g:Button>
					</g:HorizontalPanel>
						 
					
			
					
			
			
		</g:VerticalPanel>
		
	</g:HTMLPanel>
	</g:FormPanel>
</ui:UiBinder> 